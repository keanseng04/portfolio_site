source 'https://rubygems.org'

gem 'rails', '4.2.0'

#default stacks
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

#template and asset stacks
gem 'foundation-rails', '~> 5.0.2.0'
gem 'slim-rails'

#server and database stacks
gem 'pg'
gem 'rails_12factor', group: [:production, :staging]

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

